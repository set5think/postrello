<div class="row">
  <div class="span4 offset4">
    <h4 class="text-center">Sign up for <small>Postrello</small></h4>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="login-form">
      <div class="control-group">
        <%= f.email_field :email, :autofocus => true, :class => 'login-field', :placeholder => 'Enter your email' %>
        <label class="login-field-icon fui-man-16" for="user[email]"></label>
      </div>
      <div class="control-group">
        <%= f.password_field :password, :class => 'login-field', :placeholder => 'Enter your password' %>
        <label class="login-field-icon fui-lock-16" for="user[password]"></label>
      </div>
      <div class="control-group">
        <%= f.password_field :password_confirmation, :class => 'login-field', :placeholder => 'Confirm your password' %>
        <label class="login-field-icon fui-lock-16" for="user[password_confirmation]"></label>
      </div>
      <%= f.submit "Sign up", :class => 'btn btn-primary btn-large btn-block' %>
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
</div>

